{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .login-container {
            max-width: 500px;
            margin: 40px auto;
            padding: 40px;
            background-color: #fff9fb;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(255, 105, 180, 0.1);
            border: 1px solid #ffe6f2;
        }

        h1 {
            color: #9c27b0;
            text-align: center;
            margin-bottom: 30px;
            font-weight: 600;
            font-size: 28px;
            text-shadow: 1px 1px 2px rgba(156, 39, 176, 0.1);
        }

        .alert-danger {
            background-color: #fce4ec;
            border-color: #f8bbd0;
            color: #e91e63;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 25px;
            text-align: center;
        }

        .mb-3 {
            text-align: center;
            color: #6a1b9a;
            margin-bottom: 25px;
        }

        .mb-3 a {
            color: #e91e63;
            font-weight: 500;
            text-decoration: none;
        }

        .mb-3 a:hover {
            text-decoration: underline;
        }

        .form-group {
            margin-bottom: 25px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #9c27b0;
            font-weight: 500;
            font-size: 16px;
        }

        .form-control {
            width: 100%;
            padding: 14px 20px;
            border: 2px solid #f8bbd0;
            border-radius: 25px;
            background-color: white;
            transition: all 0.3s ease;
            font-size: 16px;
            box-sizing: border-box;
        }

        .form-control:focus {
            border-color: #e91e63;
            box-shadow: 0 0 0 3px rgba(233, 30, 99, 0.2);
            outline: none;
        }

        .btn {
            display: block;
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #ff6ec4, #e91e63);
            color: white;
            border: none;
            border-radius: 25px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(233, 30, 99, 0.1);
            margin-top: 30px;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(233, 30, 99, 0.2);
            background: linear-gradient(135deg, #e91e63, #ff6ec4);
        }

        .forgot-password {
            text-align: center;
            margin-top: 20px;
        }

        .forgot-password a {
            color: #e91e63;
            text-decoration: none;
            font-weight: 500;
        }

        .forgot-password a:hover {
            text-decoration: underline;
        }

        /* Responsive adjustments */
        @media (max-width: 576px) {
            .login-container {
                margin: 20px;
                padding: 30px 20px;
            }
            
            h1 {
                font-size: 24px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, 
                    <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1>Welcome Back! ðŸ’–</h1>
            
            <div class="form-group">
                <label for="inputLogin">Username or Email</label>
                <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" autocomplete="username" required autofocus>
            </div>
            
            <div class="form-group">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn" type="submit">
                Sign In
            </button>
        </form>
    </div>
{% endblock %} 