{% extends 'base.html.twig' %}

{% block title %}{{ produit.nomProduit }} | Delicious Details{% endblock %}

{% block body %}
<div class="product-detail-container">

        <div class="product-header">
            <div class="product-badge">Premium Selection</div>
            <h1 class="product-title">{{ produit.nomProduit }}</h1>
            <div class="product-price">{{ produit.prix|number_format(2, '.', ',') }} dt</div>
            
            <div class="product-meta">
                <div class="meta-item">
                    <svg class="meta-icon" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
                        <path d="M13 7h-2v5.414l3.293 3.293 1.414-1.414L13 11.586z"/>
                    </svg>
                    <span>Freshly Baked</span>
                </div>
                <div class="meta-item">
                    <svg class="meta-icon" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
                        <path d="M12 6c-3.31 0-6 2.69-6 6s2.69 6 6 6 6-2.69 6-6-2.69-6-6-6zm0 10c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4z"/>
                    </svg>
                    <span>Artisanal Quality</span>
                </div>
            </div>
        </div>
    </div>

    <div class="product-actions">
        <a href="{{ path('app_produit_index') }}" class="action-button back">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Collection
        </a>
        
        <div class="action-group">
            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="action-button edit" title="Edit">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
            </a>
            
            {{ include('produit/_delete_form.html.twig') }}
        </div>
    </div>
</div>

<style>
.product-detail-container {
    max-width: 1000px;
    margin: 3rem auto;
    padding: 0 2rem;
    font-family: 'Cormorant Garamond', serif;
    color: #3a2511;
}

.product-hero {
    display: flex;
    flex-direction: column;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 15px 40px rgba(0,0,0,0.08);
    margin-bottom: 3rem;
    position: relative;
}

.product-image-frame {
    padding: 2rem;
    background: linear-gradient(135deg, #f9f5f0 0%, #f1e8dc 100%);
    display: flex;
    justify-content: center;
    align-items: center;
}

.product-image {
    height: 350px;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.product-image img {
    max-height: 100%;
    max-width: 100%;
    object-fit: contain;
    transition: transform 0.5s cubic-bezier(0.22, 1, 0.36, 1);
    filter: drop-shadow(0 10px 20px rgba(0,0,0,0.1));
}

.product-image:hover img {
    transform: scale(1.03);
}

.product-header {
    padding: 2.5rem;
    position: relative;
    text-align: center;
}

.product-badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: #d4a017;
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 30px;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    box-shadow: 0 5px 15px rgba(212, 160, 23, 0.3);
}

.product-title {
    font-size: 2.5rem;
    font-weight: 600;
    color: #3a2511;
    margin: 0 0 1rem;
    font-family: 'Playfair Display', serif;
    letter-spacing: 0.5px;
}

.product-price {
    font-size: 2rem;
    font-weight: 600;
    color: #d4a017;
    margin-bottom: 2rem;
    position: relative;
    display: inline-block;
}

.product-price:after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 2px;
    background: #d4a017;
    opacity: 0.5;
}

.product-meta {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 1.5rem;
}

.meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    color: #7a6b5d;
}

.meta-icon {
    width: 18px;
    height: 18px;
    fill: #d4a017;
}

.product-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
}

.action-group {
    display: flex;
    gap: 1rem;
}

.action-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.8rem;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.22, 1, 0.36, 1);
    border: none;
    cursor: pointer;
    font-size: 0.95rem;
    letter-spacing: 0.5px;
}

.action-button.back {
    background: white;
    color: #7a6b5d;
    border: 1px solid #e0d7cd;
    box-shadow: 0 5px 15px rgba(0,0,0,0.03);
}

.action-button.back:hover {
    background: #f9f5f0;
    transform: translateX(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.05);
}

.action-button.edit {
    background: #3a2511;
    color: white;
    padding: 0.9rem;
    border-radius: 50%;
    box-shadow: 0 5px 15px rgba(58, 37, 17, 0.2);
}

.action-button.edit:hover {
    background: #5a3d28;
    transform: translateY(-3px) rotate(5deg);
    box-shadow: 0 8px 25px rgba(58, 37, 17, 0.3);
}

.delete-form button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: #fff5f5;
    color: #ff6b6b;
    border: none;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: 0 5px 15px rgba(255, 107, 107, 0.1);
}

.delete-form button:hover {
    background: #ff6b6b;
    color: white;
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 25px rgba(255, 107, 107, 0.2);
}

@media (max-width: 768px) {
    .product-detail-container {
        padding: 0 1rem;
    }
    
    .product-hero {
        flex-direction: column;
    }
    
    .product-image {
        height: 250px;
    }
    
    .product-title {
        font-size: 2rem;
    }
    
    .product-price {
        font-size: 1.8rem;
    }
    
    .product-meta {
        flex-direction: column;
        gap: 0.8rem;
    }
    
    .product-actions {
        flex-direction: column;
        gap: 1.5rem;
    }
    
    .action-group {
        width: 100%;
        justify-content: center;
    }
    
    .action-button.back {
        width: 100%;
        justify-content: center;
    }
}

/* Add some elegant animations */
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.product-hero {
    animation: fadeIn 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
}

.product-header {
    animation: fadeIn 0.6s 0.2s cubic-bezier(0.22, 1, 0.36, 1) both;
}

.product-actions {
    animation: fadeIn 0.6s 0.4s cubic-bezier(0.22, 1, 0.36, 1) both;
}
</style>
{% endblock %}