{% extends 'base.html.twig' %}

{% block title %}{{ produit.nomProduit }} | Delicious Details{% endblock %}

{% block body %}
<div class="cookie-detail-container">
    <div class="cookie-hero">
        <div class="cookie-image">
            <!-- Replace with your actual image path -->
            <img src="{{ asset('images/cookies/' ~ produit.id ~ '.jpg') }}" 
                 alt="{{ produit.nomProduit }}" 
                 onerror="this.src='{{ asset('images/cookies/default.jpg') }}'">
        </div>
        <div class="cookie-header">
            <h1 class="cookie-title">{{ produit.nomProduit }}</h1>
            <div class="cookie-price">{{ produit.prix|number_format(2, '.', ',') }} dt</div>
            <div class="cookie-meta">Product ID: {{ produit.id }}</div>
        </div>
    </div>

    <div class="cookie-actions">
        <a href="{{ path('app_produit_index') }}" class="cookie-button back">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Menu
        </a>
        
        <div class="action-group">
            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="cookie-button edit">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
            </a>
            
            {{ include('produit/_delete_form.html.twig') }}
        </div>
    </div>
</div>

<style>
.cookie-detail-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 1rem;
    font-family: 'Poppins', sans-serif;
}

.cookie-hero {
    display: flex;
    flex-direction: column;
    background: linear-gradient(135deg, #f5f5f5 0%, #fff 100%);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    margin-bottom: 2rem;
}

.cookie-image {
    height: 300px;
    background: #f8e8d0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.cookie-image img {
    max-height: 100%;
    max-width: 100%;
    object-fit: contain;
    transition: transform 0.3s;
}

.cookie-image:hover img {
    transform: scale(1.05);
}

.cookie-header {
    padding: 2rem;
    position: relative;
}

.cookie-title {
    font-size: 2.2rem;
    font-weight: 700;
    color: #3a2511;
    margin: 0 0 0.5rem;
    font-family: 'Playfair Display', serif;
}

.cookie-price {
    font-size: 1.8rem;
    font-weight: 600;
    color: #d4a017;
    margin-bottom: 1rem;
}

.cookie-meta {
    font-size: 0.9rem;
    color: #888;
    font-weight: 500;
}

.cookie-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.action-group {
    display: flex;
    gap: 1rem;
}

.cookie-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s;
    border: none;
    cursor: pointer;
}

.cookie-button.back {
    background: #f8f8f8;
    color: #555;
    border: 1px solid #e0e0e0;
}

.cookie-button.back:hover {
    background: #f0f0f0;
    transform: translateX(-3px);
}

.cookie-button.edit {
    background: #3a2511;
    color: white;
    padding: 0.8rem;
    border-radius: 50%;
}

.cookie-button.edit:hover {
    background: #5a3d28;
    transform: translateY(-3px);
}

.delete-form button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: #ffecec;
    color: #ff5252;
    border: none;
    cursor: pointer;
    transition: all 0.3s;
}

.delete-form button:hover {
    background: #ff5252;
    color: white;
    transform: translateY(-3px);
}

@media (max-width: 768px) {
    .cookie-hero {
        flex-direction: column;
    }
    
    .cookie-image {
        height: 200px;
    }
    
    .cookie-title {
        font-size: 1.8rem;
    }
    
    .cookie-price {
        font-size: 1.5rem;
    }
    
    .cookie-actions {
        flex-direction: column;
        gap: 1rem;
    }
    
    .action-group {
        width: 100%;
        justify-content: space-between;
    }
    
    .cookie-button.back {
        width: 100%;
        justify-content: center;
    }
}
</style>
{% endblock %}