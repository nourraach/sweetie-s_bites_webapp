{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .product-container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .product-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }
        
        .product-header h1 {
            color: #2c3e50;
            font-weight: 600;
        }
        
        .btn {
            padding: 10px 15px;
            border-radius: 4px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn-primary {
            background-color:rgb(12, 21, 28);
            color: white;
            border: 1px solidrgb(5, 23, 34);
        }
        
        .btn-primary:hover {
            background-color:rgb(20, 30, 37);
        }
        .btn-primary:hover {
            background-color: rgb(20, 30, 37);
        }

        .search-container {
            margin-bottom: 30px;
        }

        .search-form {
            display: flex;
            max-width: 500px;
        }

        .search-input {
            flex-grow: 1;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 4px 0 0 4px;
            font-size: 16px;
        }

        .search-button {
            padding: 10px 20px;
            background-color: rgb(12, 21, 28);
            color: white;
            border: none;
            border-radius: 0 4px 4px 0;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .search-button:hover {
            background-color: rgb(20, 30, 37);
        }


        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .product-card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .product-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-bottom: 1px solid #eee;
        }

        .product-info {
            padding: 15px;
        }

        .product-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 8px;
            color: #2c3e50;
        }

        .product-price {
            font-size: 1.2rem;
            color:rgba(165, 3, 125, 0.64);
            font-weight: 700;
            margin-bottom: 12px;
        }

        .product-actions {
            display: flex;
            justify-content: space-between;
            padding-top: 10px;
            border-top: 1px solid #eee;
        }

        .product-actions a {
            color:rgb(4, 25, 39);
            text-decoration: none;
            font-size: 0.9rem;
            padding: 5px 10px;
            border-radius: 4px;
            transition: background-color 0.2s;
        }

        .product-actions a:hover {
            background-color: #e1f0fa;
        }

        .no-products {
            text-align: center;
            color: #7f8c8d;
            padding: 40px 20px;
            grid-column: 1 / -1;
        }
    </style>
{% endblock %}

{% block body %}





    <div class="product-container">
        <div class="product-header">
            <h1>Our Products üç™ üç∞ üç´</h1>
            <a href="{{ path('app_produit_new') }}" class="btn btn-primary">Add New Product</a>
        </div>
        <div class="search-container">
            <form action="{{ path('app_produit_index') }}" method="get" class="search-form">
                <input type="text" 
                       name="q" 
                       class="search-input" 
                       placeholder="Search products by name or ID..." 
                       value="{{ app.request.query.get('q') }}">
                <button type="submit" class="search-button">Search</button>
            </form>
        </div>

        <div class="product-grid">
            {% for produit in produits %}
                <div class="product-card">
                    {# Modification ici pour utiliser c1.png comme image par d√©faut #}
                    <img src="{{ produit.imageName ? vich_uploader_asset(produit, 'imageFile') : asset('uploads/products/c1.png') }}" 
                         alt="{{ produit.nomProduit }}" 
                         class="product-image">
                    
                    <div class="product-info">
                        <h3 class="product-title">{{ produit.nomProduit }}</h3>
                        <div class="product-price">{{ produit.prix|number_format(2, '.', ',') }} dt</div>
                        
                        <div class="product-actions">
                            <a href="{{ path('app_produit_show', {'id': produit.id}) }}">Details</a>
                            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">Edit</a>
                            <a href="{{ path('app_cart_add', {'id': produit.id}) }}" class="btn btn-success">Add to Cart</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="no-products">
                    <p>No products available</p>
                    <a href="{{ path('app_produit_new') }}" class="btn btn-primary">Add your first product</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}